#Multiscreen support---------------------------------------------------------------------------------------------
#exec (xrandr | grep -E 'HDMI1 connected' &> /dev/null) && xrandr --output HDMI1 --auto --right-of eDP1

set $mode_screen Screen Manager
mode "$mode_screen" {
     bindsym v exec --no-startup-id sh ~/.config/i3/scripts/screenManager.sh VGA, mode "default"
     bindsym l exec --no-startup-id sh ~/.config/i3/scripts/screenManager.sh left, mode "default"
     bindsym r exec --no-startup-id sh ~/.config/i3/scripts/screenManager.sh right, mode "default"
     bindsym o exec --no-startup-id sh ~/.config/i3/scripts/screenManager.sh off, mode "default"

     #Back to normal mode
     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_screen"

workspace $workspace1 output HDMI1
workspace $workspace2 output eDP1
workspace $workspace3 output eDP1
workspace $workspace10 output HDMI1

